	my $fixed1Ref = fix_file_level_summary($c1Ref);
	my $fixed2Ref = fix_file_level_summary($c2Ref);

	summary_level_report($fixed1Ref, $fixed2Ref, $c1Title, $c2Title, $resourcesDir, $supress, "file", $verifyLprojResultRef, $myout);
}



